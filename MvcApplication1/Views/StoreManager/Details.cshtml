@model MvcApplication1.Models.Album

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<fieldset>
    <legend>Album</legend>

    <div class="display-label">Género</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Genre.Name)
    </div>

    <div class="display-label">Artista</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Artist.Name)
    </div>

    <div class="display-label">Título</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">Precio</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>

    <div class="display-label">Portada del Album</div>
    <div class="display-field">
        <p>
    <img alt="@Model.Title"
src="@Model.AlbumArtUrl" />
</p>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id=Model.AlbumId }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
